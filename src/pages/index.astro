---
import Matrix from "../components/Matrix.astro";
import Sidebar from "../components/Sidebar.astro";
import TabBar from "../components/TabBar.astro";
import TypistLoop from "../components/TypistLoop";
import Vignette from "../components/Vignette.astro";
import Base from "../layouts/Base.astro";
import { COLOURS } from "../lib/colours";
---

<Base>
    <Matrix />
    <TabBar />
    <Vignette />
    <div class="flex flex-col justify-center h-dynamic">
        <div class="relative mb-4 flex">
            <h1
                class="mx-auto text-4xl md:text-6xl select-none neon glitch"
                data-before="Neal Wang"
            >
                Neal Wang
            </h1>
        </div>
        <TypistLoop
            client:load
            texts={[
                "Student",
                "Mathlete",
                "Developer",
                "Software Engineer",
                "Teacher",
                "Violinist",
                "Tennis Player",
                "NixOS User"
            ]}
        />
    </div>
    <Sidebar />
    <a
        class="fixed bottom-4 right-4 desktop"
        href="https://github.com/mathletedev/mathletedev.github.io"
        target="_blank"
    >
        <img
            class="w-8 h-8 m-auto"
            src={`https://cdn.simpleicons.org/github/${COLOURS.overlay0.hex.substring(1)}`}
        />
    </a>
</Base>

<script>
    import "../lib/fade";
</script>
