---
import Matrix from "../components/Matrix.astro";
import NavCard from "../components/NavCard.astro";
import TypistLoop from "../components/TypistLoop";
import Vignette from "../components/Vignette.astro";
import Base from "../layouts/Base.astro";
---

<Base>
	<Matrix />
	<Vignette />
	<div class="h-screen flex flex-col justify-center">
		<h1 class="text-center text-6xl shadow-text select-none neon">Neal Wang</h1>
		<TypistLoop
			client:load
			texts={[
				"Student",
				"Mathlete",
				"Developer",
				"Scientist",
				"Teacher",
				"Violinist",
				"Tennis Player",
				"NixOS User"
			]}
		/>
	</div>
	<div
		class="absolute left-16 bottom-0 h-screen flex flex-col justify-evenly"
		id="fade"
	>
		<NavCard title="About" href="/about" colour="#f38ba8" />
		<NavCard title="Skills" href="/skills" colour="#fab387" />
		<NavCard title="Awards" href="/awards" colour="#f9e2af" />
		<NavCard title="Projects" href="/projects" colour="#a6e3a1" />
		<NavCard title="Blog" href="/blog" colour="#89b4fa" />
		<NavCard title="Contact" href="/contact" colour="#b4befe" />
	</div>
</Base>

<script>
	import "../lib/fade";
</script>
