---
import Matrix from "../components/Matrix.astro";
import Sidebar from "../components/Sidebar.astro";
import TabBar from "../components/TabBar.astro";
import TypistLoop from "../components/TypistLoop";
import Vignette from "../components/Vignette.astro";
import Base from "../layouts/Base.astro";
---

<Base>
	<Matrix />
	<TabBar />
	<Vignette />
	<div class="flex flex-col justify-center h-dynamic">
		<h1 class="text-center text-4xl md:text-6xl shadow-text select-none neon">
			Neal Wang
		</h1>
		<TypistLoop
			client:load
			texts={[
				"Student",
				"Mathlete",
				"Developer",
				"Scientist",
				"Teacher",
				"Violinist",
				"Tennis Player",
				"NixOS User"
			]}
		/>
	</div>
	<Sidebar />
</Base>

<script>
	import "../lib/fade";
</script>
