---
import Matrix from "../components/Matrix.astro";
import NavCard from "../components/NavCard.astro";
import TypistLoop from "../components/TypistLoop";
import Vignette from "../components/Vignette.astro";
import Base from "../layouts/Base.astro";
---

<Base>
	<Matrix />
	<Vignette />
	<div class="h-screen flex flex-col justify-center">
		<h1 class="text-center text-6xl shadow-text select-none neon">Neal Wang</h1>
		<TypistLoop
			client:load
			texts={["Student", "Mathlete", "Violinist", "Programmer", "Arch User"]}
		/>
	</div>
	<div class="absolute left-16 bottom-0 h-screen flex flex-col justify-evenly">
		<NavCard title="About" href="/about" color="#f38ba8" />
		<NavCard title="Skills" href="/skills" color="#fab387" />
		<NavCard title="Work" href="/work" color="#f9e2af" />
		<NavCard title="Projects" href="/projects" color="#a6e3a1" />
		<NavCard title="Blog" href="/blog" color="#89b4fa" />
		<NavCard title="Contact" href="/contact" color="#b4befe" />
	</div>
</Base>
