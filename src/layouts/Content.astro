---
import PageNav from "../components/PageNav.astro";
import TabBar from "../components/TabBar.astro";
import Vignette from "../components/Vignette.astro";

export interface Props {
    title: string;
    prev?: string;
    next?: string;
}

const { title, prev, next } = Astro.props as Props;
---

<>
    <TabBar show />
    <Vignette />
    <div class="h-dynamic flex">
        <div class="my-auto flex w-screen flex-col">
            <h1
                class="neon mx-auto -mt-12 w-min animate-bounce select-none text-center text-4xl italic md:mt-0 md:text-6xl"
            >
                {title}
            </h1>
            <slot />
        </div>
        {prev && <PageNav href={prev} back />}
        {next && <PageNav href={next} />}
    </div>
</>
