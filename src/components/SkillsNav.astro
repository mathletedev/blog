---
export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<div class="opacity-0 transition-opacity duration-1000">
    <button
        class="px-3 md:px-4 py-1 md:py-3 rounded-lg bg-base hover:bg-surface0 transition-colors"
    >
        {title}
    </button>
</div>

<style>
    .current {
        @apply bg-surface0;
    }
</style>
